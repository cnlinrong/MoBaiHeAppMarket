<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp"
        android:clipToPadding="false"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" >

        <TextView
            android:id="@+id/parent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <LinearLayout
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical" >

            <ImageView
                android:layout_width="19dp"
                android:layout_height="match_parent"
                android:layout_marginRight="7dp"
                android:src="@drawable/search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="搜索"
                android:textColor="@android:color/white"
                android:textSize="22sp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/navList"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="42dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="62dp"
            android:layout_weight="1"
            android:background="@drawable/nav_list_bg"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:scrollbars="none" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="37dp"
            android:paddingLeft="10dp"
            android:paddingRight="20dp"
            android:paddingTop="57dp" >

            <org.evilbinary.tv.widget.TvHorizontalScrollView
                android:id="@+id/hsv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:scrollbars="none" >

                <com.open.androidtvwidget.view.GridLayoutTV
                    android:id="@+id/gl_gridlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </org.evilbinary.tv.widget.TvHorizontalScrollView>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>