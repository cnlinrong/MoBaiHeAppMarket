<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

    <!-- 倒影控件属性 -->
    <declare-styleable name="reflectItemView">
        <attr name="isReflect" format="boolean" />
    </declare-styleable>

    <attr name="scale" format="integer" />
    <attr name="scaleable" format="boolean" />
    <attr name="borderDrawable" format="reference" />
    <attr name="borderSize" format="dimension" />
    <attr name="delay" format="integer" />
    <attr name="animationType">
        <enum name="DEFAULT" value="0"></enum>
        <enum name="TRANSLATE" value="1"></enum>
    </attr>
    <attr name="durationLarge" format="integer" />
    <attr name="durationSmall" format="integer" />

    <declare-styleable name="TvLinearLayout">
        <attr name="scaleable" />
        <attr name="borderDrawable" />
        <attr name="borderSize" />
        <attr name="scale" />
        <attr name="delay" />
        <attr name="durationLarge" />
        <attr name="durationSmall" />
        <attr name="animationType" />
    </declare-styleable>
    <declare-styleable name="TvRelativeLayout">
        <attr name="scaleable" />
        <attr name="borderDrawable" />
        <attr name="borderSize" />
    </declare-styleable>
    <declare-styleable name="TvTextView">
        <attr name="scaleable" />
        <attr name="borderDrawable" />
        <attr name="number" format="integer" />
        <attr name="numberColor" format="color" />
    </declare-styleable>
    <declare-styleable name="TvHorizontalScrollView">
        <attr name="fadingEdge" format="integer" />
    </declare-styleable>
    <declare-styleable name="RoundImpl">
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
    </declare-styleable>

</resources>