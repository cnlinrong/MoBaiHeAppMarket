<resources>

    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.NoActionBar">
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- 设置无标题-->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置全屏-->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MyRatingBar" parent="@style/Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bac</item>
        <item name="android:minHeight">60dip</item>
        <item name="android:maxHeight">60dip</item>
        <item name="android:isIndicator">false</item>
    </style>
    
</resources>
